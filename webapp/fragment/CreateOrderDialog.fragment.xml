<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<SelectDialog id="selectDialog3"
		noDataText="No Products Found"
		title="Select Product"
		search=".onSearch"
		searchPlaceholder="Search Products"
		confirm=".onConfirmProductSelection"
		cancel=".onConfirmProductSelection"
		showClearButton="true"
		items="{
			path: '/OrderItems.json',
			sorter: {
				path: 'Name',
				descending: false
			}
		}">
		<items>
        <StandardListItem id="standardListItem3"
			selected="{selected}"
			title="{ProductName}"
			description="{DelPlantDesc}"
			icon="{ProductPicUrl}"
			iconDensityAware="false"
			iconInset="false"
			type="Active" />
    </items>
	</SelectDialog>
</core:FragmentDefinition>