<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <Dialog id="dlgSelectProduct" title="Select Product">
        <VBox id="vboxdialog">
            <List
                id="productList"
                mode="SingleSelectMaster"
                items="{/OrderItems}">
                <StandardListItem
                    id="standardLItem01"
                    title="{ProductName}"
                    description="{Quantity}"
                    type="Active" />
            </List>
        </VBox>
        <beginButton>
            <Button id="btnSelectProduct" text="Select" press=".onConfirmProductSelection" />
        </beginButton>
        <endButton>
            <Button id="btnCloseDialog" text="Close" press=".onProductDialogClose" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>